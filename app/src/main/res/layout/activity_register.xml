<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TableLayout
        android:layout_width="358dp"
        android:layout_height="636dp"
        android:orientation="vertical"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_span="2"
                android:fontFamily="@font/font_urbanist_bold"
                android:text="@string/header_reg_1"
                android:textColor="@color/primary_black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_fn"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_column="0"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_fn"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="128dp" />

            <EditText
                android:id="@+id/input_ln"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_column="1"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_ln"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="128dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/input_birthdate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_span="2"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_birthday"
                android:inputType="date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="128dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Spinner
                android:id="@+id/input_gender"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_span="2"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:inputType="none"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_span="2"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_phone"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="128dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_span="2"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_email"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="128dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/txt_register_pass"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_span="2"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_pass"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="129dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_span="2"
                android:background="@drawable/btn_primary"
                android:fontFamily="@font/font_urbanist_medium"
                android:text="@string/btn_next"
                android:textAllCaps="false"
                android:textColor="@drawable/btn_text_color_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.500" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>