<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_logo"
        android:transitionName="logo_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_urbanist_medium"
        android:text="@string/app_name"
        android:textColor="@color/black_alter"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintVertical_bias="0.005" />


    <TableLayout
        android:layout_width="354dp"
        android:layout_height="336dp"
        android:orientation="vertical"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_main_login"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_primary"
                android:text="@string/btn_login"
                android:layout_span="3"
                android:textColor="@drawable/btn_text_color_white"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="370dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_main_register"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_secondary"
                android:text="@string/btn_register"
                android:layout_span="3"
                android:textColor="@drawable/btn_text_color"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="464dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="5dp"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/font_urbanist_medium"
                android:text="@string/p_reg"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="5dp"
                android:layout_column="2"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/line" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageButton
                android:id="@+id/btn_google_reg"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_column="0"
                android:layout_span="3"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_secondary"
                android:contentDescription="@string/li_reg_now"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:text="@string/btn_register"
                android:textColor="@drawable/btn_text_color_white"
                app:srcCompat="@drawable/ic_google"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="582dp" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>