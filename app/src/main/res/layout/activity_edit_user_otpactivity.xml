<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserOTPActivity">
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back_confirm_OTP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_back"
            android:drawableStart="@drawable/back_arrow"
            android:paddingStart="15dp"
            android:text="@string/filler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105" />

        <TextView
            android:id="@+id/p_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/font_urbanist_bold"
            android:text="@string/header_otp"
            android:textColor="@color/primary_black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/user_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/font_urbanist_regular"
            android:text="@string/p_otp"
            android:textColor="@color/black_alter"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/txt_otp_user_1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_no"
                android:textAlignment="center"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="129dp" />

            <EditText
                android:id="@+id/txt_otp_user_2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_no"
                android:textAlignment="center"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:layout_marginRight="30dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="129dp" />
            <EditText
                android:id="@+id/txt_otp_user_3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_no"
                android:textAlignment="center"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                android:layout_marginRight="30dp"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="129dp" />
            <EditText
                android:id="@+id/txt_otp_user_4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/input_no"
                android:textAlignment="center"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/grey"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="129dp" />



        </LinearLayout>

        <Button
            android:id="@+id/btn_verify_user_OTP"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/btn_primary"
            android:fontFamily="@font/font_urbanist_medium"
            android:text="@string/btn_verify"
            android:textAllCaps="false"
            android:textColor="@drawable/btn_text_color_white" />

        <TextView
            android:id="@+id/p_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_urbanist_bold"
            android:text="@string/li_receive"
            android:textAlignment="center"
            android:textColor="@color/primary_teal"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>