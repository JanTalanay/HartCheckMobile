<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BPFragment">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_back"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="15dp"
        android:text="@string/filler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="325dp"
        android:layout_height="241dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        app:layout_constraintVertical_bias="0.046" />


    <TextView
        android:id="@+id/txt_status"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_cust_1"
        android:fontFamily="@font/font_urbanist_bold"
        android:padding="10dp"
        android:text="Status: Normal"
        android:textAlignment="center"
        android:textColor="@color/primary_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <TextView
        android:id="@+id/txt_systolic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="44dp"
        android:background="@drawable/btn_cust_1"
        android:fontFamily="@font/font_urbanist_bold"
        android:padding="10dp"
        android:text="118\n Systolic "
        android:textAlignment="center"
        android:textColor="@color/primary_black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_diastolic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <TextView
        android:id="@+id/txt_diastolic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/btn_cust_1"
        android:fontFamily="@font/font_urbanist_bold"
        android:padding="10dp"
        android:text="78\n Diastolic"
        android:textAlignment="center"
        android:textColor="@color/primary_black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/btn_add_bp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="552dp"
        android:layout_span="2"
        android:background="@drawable/btn_primary"
        android:fontFamily="@font/font_urbanist_medium"
        android:text="@string/btn_add_bp"
        android:textAllCaps="false"
        android:textColor="@drawable/btn_text_color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_view_bp"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_span="2"
        android:background="@drawable/btn_primary"
        android:fontFamily="@font/font_urbanist_medium"
        android:text="@string/btn_view_bp"
        android:textAllCaps="false"
        android:textColor="@drawable/btn_text_color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_bp"
        app:layout_constraintVertical_bias="0.673" />


</androidx.constraintlayout.widget.ConstraintLayout>