<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <TableLayout
        android:id="@+id/bpLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_bp_date"
                android:layout_column="0"
                android:layout_width="160dp"
                android:layout_marginTop="5dp"
                android:text="January 10, 2023, 10:AM "
                android:fontFamily="@font/font_urbanist_bold"
                android:textColor="@color/primary_black" />
            <TextView
                android:id="@+id/txt_bp_delete"
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_marginTop="5dp"
                android:text="Delete"
                android:textAlignment="center"
                android:fontFamily="@font/font_urbanist_bold"
                android:textColor="@color/primary_black" />

        </TableRow>
        <ImageView
            android:id="@+id/doc_line"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/line"
            android:visibility="visible"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt_prev_systolic"
                android:textAlignment="center"
                android:layout_column="0"
                android:textSize="18sp"
                android:text="120\nSystolic"
                android:layout_marginRight="5dp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_urbanist_bold"
                android:textColor="@color/primary_black" />

            <TextView
                android:id="@+id/txt_prev_diastolic"
                android:layout_column="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="90\nDiastolic"
                android:fontFamily="@font/font_urbanist_bold"
                android:textColor="@color/primary_black" />

        </TableRow>

    </TableLayout>

</androidx.cardview.widget.CardView>