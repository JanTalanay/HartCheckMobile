<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="347dp"
        android:layout_height="644dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="82dp">

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_span="2"
                android:fontFamily="@font/font_urbanist_bold"
                android:text="@string/header_home"
                android:textColor="@color/primary_black"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="94dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_view_bp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_cust_1"
                android:drawableTop="@drawable/ic_bp"
                android:fontFamily="@font/font_urbanist_bold"
                android:padding="10dp"
                android:text="@string/btn_view_bp_2"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="265dp" />

            <Button
                android:id="@+id/btn_consul"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_cust_2"
                android:drawableTop="@drawable/ic_doctor"
                android:fontFamily="@font/font_urbanist_bold"
                android:padding="10dp"
                android:text="@string/btn_consultations"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="265dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_cust_3"
                android:drawableTop="@drawable/ic_chat"
                android:fontFamily="@font/font_urbanist_bold"
                android:padding="10dp"
                android:text="@string/btn_chat"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="265dp" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/btn_cust_4"
                android:drawableTop="@drawable/ic_user"
                android:fontFamily="@font/font_urbanist_bold"
                android:padding="10dp"
                android:text="@string/btn_profile"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="265dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_info"
                android:layout_width="320dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_span="2"
                android:background="@drawable/btn_primary"
                android:fontFamily="@font/font_urbanist_medium"
                android:text="@string/btn_info"
                android:textAllCaps="false"
                android:textColor="@drawable/btn_text_color_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.500" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/li_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_span="2"
                android:clickable="true"
                android:fontFamily="@font/font_urbanist_bold"
                android:text="@string/header_faq"
                android:textAlignment="center"
                android:textColor="@color/primary_teal"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="94dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/report_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:clickable="true"
                android:fontFamily="@font/font_urbanist_bold"
                android:text="@string/li_bug"
                android:textAlignment="center"
                android:textColor="@color/primary_teal"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="94dp" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>